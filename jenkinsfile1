pipeline {
    agent { label 'slave_key1' }  // Use the slave_key1 node
stage('Checkout Code') {
            steps {
                script {
                    echo "Cloning GitHub repository"
                    sh """
                    git clone ${https://github.com/Sumukha97/sample-webapp.git}
                    cd sample-webapp
                    """
                }
            }
        }
    environment {
        AWS_REGION = 'ap-south-1'  // Set your AWS region
        ECR_URI = '816069160812.dkr.ecr.ap-south-1.amazonaws.com'  // Your ECR URI
        REPOSITORY_NAME = 'sample-webapp'  // Your ECR repository name
    }

    stages {
        stage('Install AWS CLI') {
            steps {
                script {
                    echo "Installing AWS CLI v2"
                    sh '''
                    curl "https://awscli.amazonaws.com/awscli-exe-linux-x86_64.zip" -o "awscliv2.zip"
                    unzip awscliv2.zip
                    sudo ./aws/install
                    '''
                }
            }
        }

        stage('AWS Configuration') {
            steps {
                script {
                    echo "Configuring AWS CLI"
                    // Configure AWS CLI with credentials from environment variables
                    sh '''
                    aws configure set aws_access_key_id $AWS_ACCESS_KEY_ID
                    aws configure set aws_secret_access_key $AWS_SECRET_ACCESS_KEY
                    aws configure set region ${ap-south-1}
                    '''
                }
            }
        }

        

        stage('Maven Build') {
            steps {
                script {
                    echo "Building project with Maven"
                    sh """
                    cd sample-webapp
                    mvn clean install
                    """
                }
            }
        }

        stage('ECR Login') {
            steps {
                script {
                    echo "Logging in to AWS ECR"
                    sh """
                    aws ecr get-login-password --region ${ap-south-1} | docker login --username AWS --password-stdin ${816069160812.dkr.ecr.ap-south-1.amazonaws.com/sample-webapp}
                    """
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo "Building Docker image..."
                    sh 'docker build -t ${ REPOSITORY_NAME}:latest .'
                }
            }
        }

        stage('Tag and Push Docker Image') {
            steps {
                script {
                    echo "Tagging and pushing the Docker image to ECR"
                    sh """
                    docker tag ${REPOSITORY_NAME}:latest ${816069160812.dkr.ecr.ap-south-1.amazonaws.com/sample-webapp}/${REPOSITORY_NAME}:latest
                    docker push ${816069160812.dkr.ecr.ap-south-1.amazonaws.com/sample-webapp}/${REPOSITORY_NAME}:latest
                    """
                }
            }
        }
    }

    post {
        always {
            echo "Cleaning up resources if any"
            // Add any clean-up steps if necessary
        }
    }
}
